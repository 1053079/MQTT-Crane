@page "/speedLogInfo/{Id}"
@using Wex1.Elephant.Liveviewer.Model
@using Wex1.Elephant.Liveviewer.Services
@using Wex1.Elephant.Liveviewer.Services.Mock
@inject SpeedLogService LogService

<h3>Speed Log Information</h3>
@if (SpeedLog != null)
{
    <div class="card">
        <div class="card-body">

            <dl class="row">
                <dt class="col-sm-3"><strong>Id:</strong></dt>
                <dd class="col-sm-9">@SpeedLog.Id</dd>

                <dt class="col-sm-3"><strong>Timestamp:</strong></dt>
                <dd class="col-sm-9">@SpeedLog.Timestamp.ToString()</dd>

                <dt class="col-sm-3"><strong>Type:</strong></dt>
                <dd class="col-sm-9">@SpeedLog.Type</dd>

                <dt class="col-sm-3"><strong>Component:</strong></dt>
                <dd class="col-sm-9">@SpeedLog.Component</dd>

                <dt class="col-sm-3"><strong>Description:</strong></dt>
                <dd class="col-sm-9">@SpeedLog.Description</dd>

                <dt class="col-sm-3"><strong>Speed:</strong></dt>
                <dd class="col-sm-9">@SpeedLog.Speed km/h </dd>


            </dl>
        </div>
    </div>
}
else
{
    <p>Speed log not found.</p>
}

@code {
    [Parameter]
    public string Id { get; set; }

    private SpeedLog SpeedLog { get; set; }



    protected override async Task OnInitializedAsync()
    {
        SpeedLog = await LogService.Get(Id);
    }
}

@using Wex1.Elephant.Liveviewer.Model
@using Wex1.Elephant.Liveviewer.Services
@using Wex1.Elephant.Liveviewer.Services.Interfaces



<h3>Error Logs</h3>
@if (IsError)
{
    <div class="alert alert-danger" role="alert">
        @ErrorMessage
    </div>
}
else{
@if (ErrorLogs != null)
{
    <LogList TModel="ErrorLog" Logs="ErrorLogs" ShowDetailsBtn=true/>
}
else
{
    <p>No error logs found.</p>
}
}

@code {
    private ErrorLog[] ErrorLogs;
    private string ErrorMessage;
    private bool IsError;
    private int pageNumber;
    private int pageSize;

    [Inject]
    private IApiErrorLogProvider _errorLogProvider { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await FetchErrorLogs();
    }

    private async Task FetchErrorLogs()
    {
        try
        {
            IsError = false;
            var errorLogs = await _errorLogProvider.GetAll(pageNumber, pageSize);
            ErrorLogs = errorLogs.ToArray();
        }
        catch (Exception ex)
        {
            IsError = true;
            ErrorMessage = $"Errorlogs could not be shown due to an error: \n {ex.Message}";

        }
        
    }
}


